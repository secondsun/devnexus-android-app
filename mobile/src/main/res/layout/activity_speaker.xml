<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_toolbar_back" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/toolbar_title_margin"
            android:layout_marginStart="@dimen/toolbar_title_margin"
            android:layout_marginRight="@dimen/toolbar_title_margin"
            android:layout_marginEnd="@dimen/toolbar_title_margin"
            android:textSize="@dimen/speaker_toolbar_title_text_size"
            android:textStyle="bold"
            tools:text="Daniel Passos" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/speaker_avatar_size"
                android:layout_height="@dimen/speaker_avatar_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/speaker_avatar_margin_top"
                android:src="@drawable/ic_drawer_speakers" />

            <TextView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/speaker_company_margin_top"
                android:gravity="center_horizontal"
                android:textSize="@dimen/speaker_company_text_size"
                android:textStyle="bold"
                tools:text="Red Hat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/speaker_social_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_twitter" />

                <ImageView
                    android:id="@+id/google_plus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_google_plus" />

                <ImageView
                    android:id="@+id/linkedin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_linkedin" />

                <ImageView
                    android:id="@+id/lanyrd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_lanyrd" />

                <ImageView
                    android:id="@+id/github"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_github" />

            </LinearLayout>

            <TextView
                android:id="@+id/bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/speaker_bio_margin_top"
                android:layout_marginTop="@dimen/speaker_bio_margin_bottom"
                android:lineSpacingExtra="@dimen/speaker_bio_line_space"
                android:textSize="@dimen/speaker_bio_text_size"
                tools:text="Lorem ipsum dolor sit amet, ridens offendit copiosae sed no. Et mea sensibus senserit instructior, sed cu regione dissentiunt, vel ei impedit probatus. Nam aeterno sensibus eloquentiam id, veri suavitate ex pri. Dico pertinax intellegebat ut sea, nisl homero no mei. Ius wisi intellegat ei, te sed regione impedit lucilius. Ne epicuri detraxit vel. Nominavi noluisse ne pri, an nec nominati referrentur adversarium, ut zril vitae quo. Te eam essent malorum, sea commune inimicus id. At sit omittam vituperata, idque malis cu pro. Te lorem choro cotidieque his, cu eam iisque molestiae accommodare." />

        </LinearLayout>

    </ScrollView>

</LinearLayout>